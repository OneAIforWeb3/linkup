# EventCRM Environment Variables
# Copy this file to .env and update with your values

# Telegram Bot Token (get from @BotFather)
TOKEN=your_bot_token_here

# Telegram API Credentials (get from https://my.telegram.org/apps)
# These are required for group creation functionality
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# Bot Session Name (for Telegram API)
BOT_SESSION_NAME=linkup_bot

# Docker image name (customize this for your registry)
IMAGE_NAME=ghcr.io/your-username/eventcrm-bot

# Optional: Database URL (for future persistent storage)
# DATABASE_URL=postgresql://user:pass@localhost/eventcrm 

# MySQL Database Credentials (REQUIRED for persistent storage)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=linkup

# LinkUp API URL (for database operations)
LINKUP_API_URL=http://localhost:8000

# ROFL Deployment Settings
# Set these for production deployment
ROFL_NETWORK=testnet
ROFL_INSTANCE_ID=your_instance_id 